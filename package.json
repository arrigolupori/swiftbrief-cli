{
	"name": "swiftbrief-cli",
	"version": "1.0.0",
	"description": "Swiftbrief's official CLI package.",
	"author": "Arrigo Lupori",
	"private": true,
	"main": "bin/generate-react",
	"bin": {
		"generate-react": "bin/generate-react"
	},
	"files": [
		"bin/",
		"src/",
		"README.md",
		"LICENSE"
	],
	"engines": {
		"node": ">=10.x",
		"npm": ">= 6.x"
	},
	"browserslist": [
		"maintained node versions"
	],
	"scripts": {
		"prepare": "husky install",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\""
	},
	"dependencies": {
		"chalk": "^4.1.2",
		"commander": "^9.0.0",
		"deep-keys": "^0.5.0",
		"fs-extra": "^10.0.0",
		"inquirer": "^8.1.2",
		"lodash": "^4.17.20",
		"replace": "^1.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"eslint": "^8.7.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"prettier": "2.5.1",
		"pretty-quick": "^3.1.3"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"jsxSingleQuote": true,
		"printWidth": 80,
		"quoteProps": "as-needed",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "none",
		"useTabs": true
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"eslintConfig": {
		"extends": [
			"airbnb-base",
			"plugin:prettier/recommended"
		],
		"env": {
			"commonjs": true,
			"es2021": true,
			"node": true
		},
		"parserOptions": {
			"ecmaVersion": 12
		},
		"rules": {}
	}
}
